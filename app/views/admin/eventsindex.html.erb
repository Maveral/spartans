<%= render "menu" %><br />
<center><span style="font:18pt 'Times New Roman'; color: #5c3b1d;">Lista wydarzeń specjalnych</span></center><br /><br /><br />
<% unless @events.empty? %>
	<% @events.each do |event| %>
			<table width="450px" height="367px" bgcolor="#F0FFF0"><tr><td align="center" valign="middle" style="background-image:url('/images/Popup.gif');">
			
			<!--*****EDIT THIS MESSAGE*****-->
			<%= raw(event.content.force_encoding("UTF-8")) %>
			
			<!--*****EDIT THE ABOVE MESSAGE*****-->
			</td></tr></table><br />
			
			<span style="font:12px 'Times New Roman'; float: right;">
				<%= link_to "Edytuj", :action => "eventedit", :id => event.id %>
				<%= link_to "Usuń", :action => "eventdelete", :post => event %> - 
				<%= event.updated_at.strftime("%d.%m.%Y %H:%M:%S") %>
			</span><br /><br /><br /><br />
	<% end %>
<% else %>
  <div class="notice">Nie znaleziono wiadomości specjalnych</div>
<% end %>