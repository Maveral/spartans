<%= render "menu" %><br />
<center><span style="font:18pt 'Times New Roman'; color: #5c3b1d;">Lista wydarzeń specjalnych</span></center><br /><br /><br />
<% unless @events.empty? %>
<table>
	<% @events.each do |event| %>
	<tr>
		<td><%= raw(event.content.force_encoding("UTF-8")) %></td>
	</tr>
	<tr>
		<td>
			<div style="float: right;">
			<%= link_to "Edytuj", :action => "eventedit", :id => event.id %>
			<%= link_to "Usuń", :action => "eventdelete", :post => event %> - 
			<span style="font:12px 'Times New Roman';"><%= event.updated_at.strftime("%d.%m.%Y %H:%M:%S") %></span>
			</div>
		</td>
	</tr>
	<tr>
		<td colspan=3><%= image_tag("/images/Extra/breakline_main.png") %></td>
	</tr>
	<% end %>
</table>
<% else %>
  <div class="notice">Nie znaleziono wiadomości specjalnych</div>
<% end %>