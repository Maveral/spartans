<center>
	<%= render "menu" %><br />
<span style="font:24pt 'Times New Roman'; color: #5c3b1d;">Edytuj wydarzenie</span><br /><br />
		Tytuł wiadomości:<br />
		<% form_tag({:action => "newsupdate", :id => @news.id}) do %>
		  <div class="field">
		    <%= text_field "title", :title, :value => @news.title %>
		  </div>
		  Treść:<br />
		  <div class="field">
		  <%= text_area "content", :content, :value => @news.content, :rows => 10, :class => "mceEditor" %>
		  </div>
		  <div class="actions">
		    <%= submit_tag "Edytuj" %>
		  </div>
		<% end %>
</center>

